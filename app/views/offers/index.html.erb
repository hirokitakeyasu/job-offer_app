<h1>求人一覧</h1>

<%= search_form_for @q do |f| %>
  <div class="form-group">
    <%= f.label :keywords, 'キーワード検索', t('helpers.keywords'), class: 'control-label' %>
    <%= f.text_field :keywords, required: false, value: params.dig(:q, :keywords), class: 'form-control' %>
    <%= f.button '検索する' %>
  </div>
<% end %>

<div class="f-container">
    <% @offers.each do |offer| %>
      <div class="card" style="width: 25rem">
        <div class="card-body">
            <div class="offer-title">
              <h3><%= offer.title %></h3>
            </div>
            <div class="employer-name">
              <h5><%= offer.name %></h5>
            </div>
            <div class="card-text">
              <p><%= simple_format(offer.body) %></p>
            </div>
              <%= link_to '応募する', offers_apply_path, class: "btn btn-warning index-btn" %>
              <%= link_to '詳細を見る', offer_path(offer.id), class: "btn btn-primary index-btn" %>
        </div>
      </div>
    <% end %>
</div>

<%= paginate @offers %>

<div class="page_entries_info">
  <%= page_entries_info @offers %>
</div>