<div class="offers-form">
  <%= form_with model: offer, local: true do |f| %>
   <div class="offers-entry">
    <div class="form-group form-title">
      <%= f.label :title, 'タイトル' %><p>（15文字以内）</p>
      <%= f.text_field :title, class: 'form-control', id: 'offer_title' %>
    </div>
    <div class="form-group">
      <%= f.label :name, 'ユーザー名' %><p>（20文字以内）</p>
      <%= f.text_field :name, class: 'form-control', id: 'offer_name' %>
    </div>
    <div class="form-group">
      <%= f.label :body, '本文' %>
      <%= f.text_area :body, class: 'form-control', id: 'offer_body', rows: 20 %>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, class: 'form-control', id: 'offer_image' %>
    </div>
    <div class="form-group">
      <span>タグ</span>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
        <div class="form-check">
          <%= tag.label class: 'form-check-label' do %>
            <%= tag.check_box class: 'form-check-input' %>
            <%= tag.text %>
          <% end %>
        </div>
      <% end %>
    </div>
   </div>
    
    <%= f.submit '投稿する', class: 'btn btn-success new-btn' %>
  <% end %>
</div>